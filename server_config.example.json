{
  "server": {
    "host": "your-server-ip",
    "port": 22,
    "username": "root",
    "auth_method": "password",
    "password": "your-password",
    "ssh_key_path": "/path/to/your/private/key",
    "os": "debian"
  },
  "deployment": {
    "app_name": "python-api-server",
    "app_port": 8000,
    "domain": "your-server-ip",
    "ssl_enabled": false,
    "firewall_ports": [22, 80, 443, 8000]
  },
  "security": {
    "generate_new_secrets": true,
    "custom_secret_key": "",
    "custom_api_token": "",
    "allowed_origins": ["*"]
  },
  "monitoring": {
    "enable_logs": true,
    "log_retention_days": 30,
    "health_check_interval": 30
  }
}
